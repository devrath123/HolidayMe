<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/currencySelectionLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/common_padding_small"
    android:paddingLeft="@dimen/Select_currency_padding"
    android:paddingRight="@dimen/Select_currency_padding">


    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_currency_code"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:button="@drawable/currency_selector"
        android:checked="false"
        android:text=""
        android:visibility="gone" />

    <com.holidayme.widgets.MediumFontTextView
        android:id="@+id/text_currency_code"
        style="@style/CodeFont"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/Select_currency_padding" />

    <com.holidayme.widgets.LightFontTextView
        android:id="@+id/currencyTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/Select_currency_padding"
        android:layout_toEndOf="@+id/text_currency_code"
        android:textColor="@color/white"
        android:textSize="13sp" />

</RelativeLayout>
