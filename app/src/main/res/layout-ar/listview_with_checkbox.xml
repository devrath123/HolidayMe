<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/languageRelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="35dp"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/Select_currency_padding"
    android:paddingRight="@dimen/Select_currency_padding"

    >

    <CheckBox
        android:id="@+id/currencyCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:button="@drawable/checkbox_selector"
        android:checked="false"
        android:clickable="false"
        android:gravity="center"
        android:padding="@dimen/common_padding_small"
        android:text="" />

    <com.holidayme.widgets.MediumFontTextView
        android:id="@+id/currencyCodeTextView"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/Select_currency_padding"
        android:layout_toEndOf="@+id/currencyCheckBox"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/dark_gray_text_color"
        android:textSize="@dimen/commonNormalTextSize"


        />

    <com.holidayme.widgets.LightFontTextView
        android:id="@+id/countryCurrencyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/Select_currency_padding"
        android:layout_toEndOf="@+id/currencyCodeTextView"
        android:text=""
        android:textColor="@color/dark_gray_text_color"
        android:textSize="@dimen/commonSmallTextSize" />

</RelativeLayout>



