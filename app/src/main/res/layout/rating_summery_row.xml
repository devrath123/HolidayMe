<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/common_padding_small"
    android:layout_marginStart="@dimen/common_padding_small"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/common_padding_small"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <com.holidayme.widgets.LightFontTextView
            android:id="@+id/topReviewTextView"
            android:layout_width="wrap_content"
            android:text="@string/location"
            android:layout_height="wrap_content"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/padding_large_normal"
            android:layout_marginEnd="@dimen/padding_large_normal"
            android:src="@drawable/d_tripadvisor"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/tripAdviserReviewImageView"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription,RtlHardcoded" />


    </RelativeLayout>

</RelativeLayout>