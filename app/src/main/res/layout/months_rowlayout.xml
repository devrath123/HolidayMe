<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/monthsRowRelativeLayout"
    android:layout_width="100dp"
    android:background="#efefef"
    android:layout_height="66dp"
    android:clickable="true">

    <TextView
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white"/>

    <RelativeLayout
        android:id="@+id/monthRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:background="@color/value_deal_bg"
       >

        <com.holidayme.widgets.MediumFontTextView
            android:id="@+id/monthNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:text="September"/>

        <com.holidayme.widgets.LightFontTextView
            android:id="@+id/yearTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jan"
            android:gravity="center"
            android:layout_below="@+id/monthNameTextView"
            android:textSize="12sp"
            android:textColor="#000000"
           />


    </RelativeLayout>



</FrameLayout>

